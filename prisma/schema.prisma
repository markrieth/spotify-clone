datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Song {
  id          String      @id @default(uuid())
  title       String
  contentUrl  String
  albumId     String
  genre       String?
  album       Album       @relation(fields: [albumId], references: [id])
  playlists   Playlist[]
  @@index(fields: [genre])
}

model Artist {
  id          String     @id @default(uuid())
  name        String
  albums      Album[]
}

model Album {
  id          String     @id @default(uuid())
  title       String
  artistId    String
  artist      Artist     @relation(fields: [artistId], references: [id])
  songs       Song[]
}

model Playlist {
  id          String     @id @default(uuid())
  title       String
  songs       Song[]
}